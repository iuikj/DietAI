# DietAI 环境配置文件
# 请将此文件重命名为 .env 并设置正确的值

# 基础配置
DIETAI_APP_NAME=DietAI
DIETAI_VERSION=1.0.0
DIETAI_DEBUG=false
DIETAI_LOG_LEVEL=INFO

# 服务器配置
DIETAI_HOST=0.0.0.0
DIETAI_PORT=8000
DIETAI_RELOAD=false

# 数据库配置
DIETAI_DATABASE_URL=postgresql://dietai:dietai123@localhost:5432/dietai_db
DIETAI_DATABASE_ECHO=false

# Redis配置
DIETAI_REDIS_HOST=localhost
DIETAI_REDIS_PORT=6379
DIETAI_REDIS_PASSWORD=
DIETAI_REDIS_DB=0

# MinIO配置
DIETAI_MINIO_ENDPOINT=localhost:9000
DIETAI_MINIO_ACCESS_KEY=minioadmin
DIETAI_MINIO_SECRET_KEY=minioadmin
DIETAI_MINIO_SECURE=false
DIETAI_MINIO_BUCKET=dietai-bucket

# JWT配置
DIETAI_JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
DIETAI_JWT_ALGORITHM=HS256
DIETAI_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
DIETAI_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 密码配置
DIETAI_PASSWORD_MIN_LENGTH=8
DIETAI_PASSWORD_HASH_ROUNDS=12

# CORS配置
DIETAI_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
DIETAI_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
DIETAI_CORS_HEADERS=*

# 文件上传配置
DIETAI_MAX_FILE_SIZE=10485760  # 10MB
DIETAI_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# 邮件配置
DIETAI_EMAIL_ENABLED=false
DIETAI_SMTP_HOST=smtp.gmail.com
DIETAI_SMTP_PORT=587
DIETAI_SMTP_USER=
DIETAI_SMTP_PASSWORD=
DIETAI_SMTP_USE_TLS=true

# 缓存配置
DIETAI_CACHE_DEFAULT_TTL=3600
DIETAI_CACHE_USER_PROFILE_TTL=1800
DIETAI_CACHE_NUTRITION_TTL=7200

# AI服务配置（预留）
DIETAI_AI_SERVICE_ENABLED=false
DIETAI_AI_SERVICE_URL=http://localhost:8001
DIETAI_AI_SERVICE_TIMEOUT=30

# 健康检查配置
DIETAI_HEALTH_CHECK_ENABLED=true
DIETAI_HEALTH_CHECK_INTERVAL=30 